<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daluu.DaLuuFrag"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Đã lưu"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/an"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fafafa">

            <TextView
                android:id="@+id/txtloaihinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Dịch vụ"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:padding="10dp"/>

            <Spinner
                android:id="@+id/sploaidaluu"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:backgroundTint="#000000"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:src="@drawable/hinh" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thả tim vào quán bạn yêu nào!"
                android:textColor="#000000"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:padding="15dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Hãy lắp đầy dạ dày bằng một trái tim xinh. Thả tim (icon) để lưu
 lại món ngon bạn thích nào"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/backdnsdt"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Đăng nhập bằng số điện thoại"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="#ECEBF1"
        android:layout_width="match_parent"
        android:layout_height="149dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/anhd"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEBF1"
        >

        <EditText
            android:layout_marginTop="40dp"
            android:id="@+id/EditText2nsdt"
            android:layout_width="500dp"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_text"
            android:padding="10dp"
            android:hint="Vui lòng nhập số điện thoại"
            android:textColorHint="#D3D3D3" />

        <Button
            android:id="@+id/buttonnsdt"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditText2nsdt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="148dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="123dp"
            android:background="@drawable/border_button"
            android:text="Tiếp tục"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="210dp"
            android:textSize="22dp"
            android:gravity="center"
            android:text="Khi chọn Tiếp tục, bạn đồng ý với Điều khoản sử dụng và Chính sách bảo mật của Foody" />


    </RelativeLayout>
</LinearLayout>
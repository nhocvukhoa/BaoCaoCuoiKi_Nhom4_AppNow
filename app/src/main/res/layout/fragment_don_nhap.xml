<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donhang.tab.donnhap.DonNhap"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txtloaihinhdonnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Dịch vụ"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:padding="10dp"/>

        <Spinner
            android:id="@+id/sploaidonnhap"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:backgroundTint="#000000"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa hết"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:layout_marginLeft="320dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#fafafa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/txtimgdangden"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/donnhap" />

        <TextView
            android:id="@+id/txtct1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtimgdangden"
            android:gravity="center"
            android:padding="10dp"
            android:text="Hông có gì trong giỏ hết! Đói quá à!"
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtct1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="18dp"
            android:text="Nhanh nhanh đặt món ngon tụi mình cùng măm măm nào"
            android:textSize="25dp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donhang.tab.lichsu.LichSu"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txtloaihinhlichsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:hint="Dịch vụ"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="23dp" />

        <Spinner
            android:id="@+id/sploailichsu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:backgroundTint="#000000"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtlsdh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:hint="Tất cả"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="21dp" />

        <Spinner
            android:id="@+id/sploailsdh"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:backgroundTint="#000000"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtngayls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:drawableEnd="@drawable/ic_expandmore"
            android:hint="18/12/2020"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="21dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#fafafa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lichsu" />

        <TextView
            android:id="@+id/txtct1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtimgdangden"
            android:gravity="center"
            android:padding="10dp"
            android:text="Cùng ghi lại hành trình ăn uống của bạn nào!"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtct1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="18dp"
            android:text="Dễ dàng tìm lại món ăn bạn thích, quán bạn yêu trong phần lịch sử đã đặt nào nha! "
            android:textSize="23dp" />

    </LinearLayout>

</LinearLayout>
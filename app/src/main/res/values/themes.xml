<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Now1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f03232</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">21dp</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlHighlight">#f03232</item>
        <item name="color">#f03232</item>
        <item name="android:background">#ffffff</item>
        <item name="android:checkable">true</item>
        <item name="android:width">@dimen/material_emphasis_high_type</item>
        <item name="height">@dimen/material_emphasis_medium</item>
    </style>
    <style name="TabLayoutStyleHome" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">21dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffffff</item>
        <item name="android:checkable">true</item>
        <item name="android:width">@dimen/material_emphasis_high_type</item>
        <item name="height">@dimen/material_emphasis_medium</item>
    </style>

</resources>